                description: "Official guided tour of UMD campus for prospective students and families.",
                capacity: 40
            },
            {
                id: 12,
                title: "Homecoming Celebration",
                category: "umd-sponsored",
                date: "2025-11-17",
                time: "11:00",
                location: "Maryland Stadium",
                latitude: 38.9906,
                longitude: -76.9478,
                description: "Annual homecoming festivities with parade, tailgate, and football game.",
                capacity: 5000
            },
            {
                id: 13,
                title: "Career Fair: Engineering & Tech",
                category: "umd-sponsored",
                date: "2025-11-13",
                time: "09:00",
                location: "Stamp Student Union",
                latitude: 38.9878,
                longitude: -76.9447,
                description: "Meet with 100+ employers recruiting for internships and full-time positions.",
                capacity: 1000
            },
            {
                id: 14,
                title: "New Student Orientation",
                category: "umd-sponsored",
                date: "2025-11-19",
                time: "08:30",
                location: "Stamp Student Union",
                latitude: 38.9878,
                longitude: -76.9447,
                description: "Welcome session for spring semester transfer and international students.",
                capacity: 250
            },
            {
                id: 15,
                title: "President's Town Hall",
                category: "umd-sponsored",
                date: "2025-11-21",
                time: "17:00",
                location: "Memorial Chapel",
                latitude: 38.9882,
                longitude: -76.9395,
                description: "University president addresses students and takes questions on campus initiatives.",
                capacity: 300
            }
        ];

        // ===== APPLICATION STATE =====
        let map;
        let markers = [];
        let activeFilters = {
            academic: true,
            social: true,
            'umd-sponsored': true
        };

        // ===== INITIALIZE MAP =====
        function initMap() {
            // Create map centered on UMD College Park
            map = L.map('map', {
                center: [38.9897, -76.9378],
                zoom: 15,
                zoomControl: true
            });

            // Add OpenStreetMap tiles
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors',
                maxZoom: 19
            }).addTo(map);

            // Add fullscreen control
            map.addControl(new L.Control.Fullscreen({
                position: 'topright'
            }));

            // Initialize markers
            createMarkers();
            updateEventsList();
            updateEventCounter();
        }

        // ===== CREATE CUSTOM MARKER ICON =====
        function createCustomIcon(category) {
            const iconLetters = {
                'academic': 'A',
                'social': 'S',
                'umd-sponsored': 'U'
            };

            const iconHtml = `
                <div class="custom-marker ${category}">
                    <span class="marker-icon">${iconLetters[category]}</span>
                </div>
            `;

            return L.divIcon({
                html: iconHtml,
                className: 'custom-div-icon',
                iconSize: [32, 32],
                iconAnchor: [16, 32],
                popupAnchor: [0, -32]
            });
        }

        // ===== CREATE POPUP CONTENT =====
        function createPopupContent(event) {
            const formattedDate = new Date(event.date).toLocaleDateString('en-US', {
                weekday: 'long',
                year: 'numeric',
                month: 'long',
                day: 'numeric'
            });

            const formattedTime = new Date(`2000-01-01T${event.time}`).toLocaleTimeString('en-US', {
                hour: 'numeric',
                minute: '2-digit',
                hour12: true
            });

            const categoryNames = {
                'academic': 'Academic Event',
                'social': 'Social Event',
                'umd-sponsored': 'UMD Sponsored'
            };

            return `
                <div class="custom-popup">
                    <div class="popup-title">${event.title}</div>
                    <div class="popup-info">
                        <strong>Date:</strong>
                        <span>${formattedDate}</span>
                    </div>
                    <div class="popup-info">
                        <strong>Time:</strong>
                        <span>${formattedTime}</span>
                    </div>
                    <div class="popup-info">
                        <strong>Location:</strong>
                        <span>${event.location}</span>
                    </div>
                    <div class="popup-info">
                        <strong>Capacity:</strong>
                        <span>${event.capacity} attendees</span>
                    </div>
                    <div class="popup-info" style="flex-direction: column; align-items: flex-start;">
                        <strong>Description:</strong>
                        <span>${event.description}</span>
                    </div>
                    <div class="popup-category ${event.category}">${categoryNames[event.category]}</div>
                </div>
            `;
        }

        // ===== CREATE MARKERS =====
        function createMarkers() {
            eventsData.forEach(event => {
                const marker = L.marker([event.latitude, event.longitude], {
                    icon: createCustomIcon(event.category)
                });

                marker.bindPopup(createPopupContent(event), {
                    maxWidth: 300,
                    className: 'custom-popup-wrapper'
                });

                marker.eventData = event;
                markers.push(marker);

                // Add to map if filter is active
                if (activeFilters[event.category]) {
                    marker.addTo(map);
                }
            });
        }

        // ===== UPDATE EVENTS LIST IN SIDEBAR =====
        function updateEventsList() {
            const eventsList = document.getElementById('events-list');
            eventsList.innerHTML = '';

            const visibleEvents = eventsData.filter(event => activeFilters[event.category]);

            if (visibleEvents.length === 0) {
                eventsList.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-state-icon">üìÖ</div>
                        <div class="empty-state-text">No events match your filters.<br>Try selecting different categories.</div>
                    </div>
                `;
                return;
            }

            visibleEvents.forEach(event => {
                const eventCard = document.createElement('div');
                eventCard.className = `event-card ${event.category}`;

                const formattedDate = new Date(event.date).toLocaleDateString('en-US', {
                    month: 'short',
                    day: 'numeric'
                });

                const formattedTime = new Date(`2000-01-01T${event.time}`).toLocaleTimeString('en-US', {
                    hour: 'numeric',
                    minute: '2-digit',
                    hour12: true
                });

                const categoryNames = {
                    'academic': 'Academic',
                    'social': 'Social',
                    'umd-sponsored': 'UMD Official'
                };

                eventCard.innerHTML = `
                    <div class="event-card-title">${event.title}</div>
                    <div class="event-card-meta">üìÖ ${formattedDate} ‚Ä¢ ‚è∞ ${formattedTime}</div>
                    <div class="event-card-meta">üìç ${event.location}</div>
                    <div class="event-card-category ${event.category}">${categoryNames[event.category]}</div>
                `;

                eventCard.addEventListener('click', () => {
                    map.setView([event.latitude, event.longitude], 17, {
                        animate: true,
                        duration: 1
                    });

                    const marker = markers.find(m => m.eventData.id === event.id);
                    if (marker) {
                        marker.openPopup();
                    }
                });

                eventsList.appendChild(eventCard);
            });
        }

        // ===== UPDATE EVENT COUNTER =====
        function updateEventCounter() {
            const visibleEvents = eventsData.filter(event => activeFilters[event.category]);
            document.getElementById('event-count').textContent = visibleEvents.length;
        }

        // ===== FILTER FUNCTIONALITY =====
        function setupFilters() {
            const filterCheckboxes = {
                'filter-academic': 'academic',
                'filter-social': 'social',
                'filter-umd': 'umd-sponsored'
            };

            Object.keys(filterCheckboxes).forEach(checkboxId => {
                const checkbox = document.getElementById(checkboxId);
                const category = filterCheckboxes[checkboxId];

                checkbox.addEventListener('change', (e) => {
                    activeFilters[category] = e.target.checked;
                    updateMapMarkers();
                    updateEventsList();
                    updateEventCounter();
                });
            });
        }

        // ===== UPDATE MAP MARKERS BASED ON FILTERS =====
        function updateMapMarkers() {
            markers.forEach(marker => {
                const category = marker.eventData.category;

                if (activeFilters[category]) {
                    if (!map.hasLayer(marker)) {
                        marker.addTo(map);
                    }
                } else {
                    if (map.hasLayer(marker)) {
                        map.removeLayer(marker);
                    }
                }
            });
        }

        // ===== INITIALIZE APPLICATION =====
        document.addEventListener('DOMContentLoaded', () => {
            initMap();
            setupFilters();
        });
    </script>
</body>
</html>
